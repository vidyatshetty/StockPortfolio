<html>
<head>
<style>
	table {
	  border-collapse: collapse;
	  width: 100%;
	}

	th, td {
	  text-align: left;
	  padding: 8px;
	}

	tr:nth-child(even) {background-color: #f2f2f2;}

	h2{
			text-align: center
		}
</style>

<%= link_to 'ADD STOCK', new_stock_path %>
<%= link_to 'Back', stocks_path %>
<h2> Stock Information</h2>
<% if @stock %>
<table>
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Description</th>
	</tr>
	
	<tr>
		<td><%= @stock.name %></td>
		<td><%= @stock.latest_price %></td>
		<td><%= @stock.symbol %></td>

	</tr>
</table> 
<%end%>
</body>
</html>