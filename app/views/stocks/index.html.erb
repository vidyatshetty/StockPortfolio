<html>
<head>
<style>
	table {
	  border-collapse: collapse;
	  width: 100%;
	}

	th, td {
	  text-align: left;
	  padding: 8px;
	}

	tr:nth-child(even) {background-color: #f2f2f2;}

		h2{
			text-align: center
		}
</style>


<h2> Available stocks</h2>
<%= link_to 'ADD STOCK', new_stock_path %>
<%= link_to 'Back', root_path %>

<h2> List of stocks</h2>
<% if @stock %>
<table>
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Description</th>
	</tr>
	<% @stock.each do |stock| %>
	<tr>
		<td><%= stock.name %></td>
		<td><%= stock.latest_price %></td>
		<td><%= stock.symbol %></td>
		<td><%= link_to 'Add stock to user', new_stock_user_stock_path(stock) %></td>
		<td><%= link_to 'Show', stock_path(stock) %></td>
		<td><%= link_to 'Delete', stock_path(stock), method: :delete %></td>
	</tr>
<%end%>
</table> 
<%end%>
</body>
</html>
