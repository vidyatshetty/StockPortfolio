<html>
<head>
<style>
	table {
	  border-collapse: collapse;
	  width: 100%;
	}

	th, td {
	  text-align: left;
	  padding: 8px;
	}

	tr:nth-child(even) {background-color: #f2f2f2;}

		h2{
			text-align: center
		}
</style>


<h2> My Portfolio</h2>
<%= link_to 'Back', root_path %>
<% if @user_stock.count == 0 %>
<h2>No Stocks available to view </h2>
<% end %>
<% if @user_stock &&  @user_stock.count != 0 %>
<table>
	<tr>
		<th>Company</th>
		<th>Shares</th>
		<!-- <th>User_id</th> -->
		<!-- <th>symbol</th> -->
		<th>Latest price</th><br><br>
		<th>Total price</th>
	</tr>
	<% @user_stock.each do |user_stock| %>
	<tr>
		<td><%= user_stock.stock.symbol %></td>
		<td><%= user_stock.shares %></td>
		<!-- <td><%= user_stock.id %></td> -->
		
		<!-- <td><%= user_stock.user_id %></td> -->
		<td>
			<%= "$" %>
			<%= user_stock.stock.latest_price %></td>
		<td>
			<%= "$" %>
			<%= user_stock.stock.latest_price * user_stock.shares %></td>
	</tr>
<%end%>
</table> 
<%end%>
</body>
</head>